  <script>
    const defaultPath = '/articles/default';
    const initialPath = window.location.pathname === '/' ? 
      defaultPath : window.location.pathname;

    fetchAndUpdate(initialPath);

    const contentSection = document.querySelector('#content');
    const navLinks = document.querySelectorAll('nav .articles a');
    navLinks.forEach(link => {
      link.addEventListener('click', e => {
        e.preventDefault();
        const path = `/articles/${link.dataset.slug}`;

        fetchAndUpdate(path);
        history.pushState({ path }, '', path);
        if (isMobile()) {
          document.body.classList.add('nav-closed');
        }
      });
    });

    window.addEventListener('popstate', e => {
      const { state } = e;
      const path = state === null ? defaultPath : state.path;
      fetchAndUpdate(path);
    });

    function fetchAndUpdate(path) {
      console.log('path', path);
      fetch(path, { method: 'POST', body: {} })
        .then(response => response.text())
        .then(data => {
          contentSection.innerHTML = data;
          window.scrollTo(0,0);
          highlightCurrent();
        })
        .catch(error => {
          console.error(error);
        });
    }

    highlightCurrent();
    function highlightCurrent() {
      const currentClass = 'current';
      navLinks.forEach(link => {
        link.parentElement.classList.remove(currentClass);
      });
      const slug = window.location.pathname.split('/').pop();
      if (!slug) return;

      navLinks.forEach(link => {
        if (link.dataset.slug === slug) {
          link.parentElement.classList.add(currentClass);
        }
      });
    }


    initMobileMenu();
    function initMobileMenu() {
      const burger = document.querySelector('.burger-container');
      const closeClass = 'nav-closed';

      burger.addEventListener('click', () => {
        if (document.body.classList.contains(closeClass)) {
          document.body.classList.remove(closeClass);
        } else {
          document.body.classList.add(closeClass);
        }
      });

      // Hide menu on page load for mobile
      if (isMobile()) {
        document.body.classList.add(closeClass);
      }
    }

    preventImageInNewTab();
    function preventImageInNewTab() {
      document.addEventListener('click', e => {
        if (e.target.matches('.article-body-image-wrapper > img')) {
          e.preventDefault();
        }
      });
    }

    function isMobile() {
      const mql = window.matchMedia('(max-width: 1200px)');
      return mql.matches;
    }
  </script>
